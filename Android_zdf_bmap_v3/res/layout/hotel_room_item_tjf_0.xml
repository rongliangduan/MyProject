<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_zdf"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"  >

        <ImageView
            android:id="@+id/ivPayWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_payway_online" />

        <TextView
            android:id="@+id/tvHours"
            style="@style/tv_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@+id/ivPayWay"
            android:text=""
            android:textSize="@dimen/textSize_2" />

        <TextView
            android:id="@+id/tvRoomType"
            style="@style/tv_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView8"
            android:layout_toRightOf="@+id/tvHours"
            android:text="小时" />

        <TextView
            android:id="@+id/textView8"
            style="@style/tv_normal_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvPrice"
            android:paddingTop="5dp"
            android:text="￥" />

        <TextView
            android:id="@+id/tvPrice"
            style="@style/tv_large_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_toLeftOf="@+id/btnShowReserve"
            android:text="价格" />

        <Button
            android:id="@+id/btnShowReserve"
            style="@style/btn_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:background="@drawable/btn_gray"
            android:text="满房" />
    </RelativeLayout>

    <include layout="@layout/line_h_gray" />

</LinearLayout>