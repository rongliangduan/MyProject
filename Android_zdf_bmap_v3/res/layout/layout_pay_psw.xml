<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layouPayPsw"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <TextView
                android:id="@+id/textView1"
                style="@style/tv_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:paddingLeft="@dimen/padding_large"
                android:text="密码" />

            <EditText
                android:id="@+id/etPayPsw"
                style="@style/et_medium_white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@null"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
                android:hint="请输入账户密码"
                android:inputType="textVisiblePassword"
                android:maxLength="20" />
        </LinearLayout>

        <include layout="@layout/line_h_white" />

        <TextView
            android:id="@+id/textView2"
            style="@style/tv_medium_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="为保证账户资金安全，请输入登录密码进行确认" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/gray" />

        <Button
            android:id="@+id/btnBalancePay"
            style="@style/btn_red_long"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@drawable/btn_trans_black_click"
            android:gravity="center"
            android:text="确认付款"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>